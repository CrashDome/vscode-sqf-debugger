{
	"name": "sqf-debugger",
	"displayName": "sqf-debugger",
	"description": "",
	"author": {
		"name": "billw2012",
		"email": "billw2011@gmail.com"
	},
	"license": "MIT",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Debuggers"
	],
	"private": true,
	"contributes": {
		"breakpoints": [
			{
				"language": "sqf"
			}
		],
		"debuggers": [
			{
				"type": "sqf",
				"label": "SQF Debugger",
				"program": "./out/adapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"connect": {
						"required": [],
						"properties": {}
					}
				},
				"initialConfigurations": [
					{
						"name": "connect",
						"type": "sqf",
						"request": "launch"
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"vscode-debugadapter": "1.38.0"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0",
		"vscode-debugadapter-testsupport": "1.40.1"
	}
}
